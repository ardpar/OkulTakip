@model List<Ders>
@{
    ViewData["Title"] = "Index";
}

    <table class="table">
        <thead>
            <tr>

                <th scope="col">Ders Id</th>
                <th scope="col">Ders Adı</th>
                <th scope="col">Aksiyon</th>

            </tr>
        </thead>
        
        <tbody>
            @foreach (var item in Model)
            {
            <tr>

                <td>@item.Id</td>
                <td>@item.Isim</td>
                <td>
                    
                    <a asp-controller="Dersler" asp-action="DersGetir" asp-route-id="@item.Id" class="btn btn-success ">Guncelle</a>
                    <a asp-controller="Dersler" asp-action="Sil" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                </td>
                
            </tr>
            }

            
        </tbody>
    </table>
    <a asp-controller="Dersler" asp-action="YeniDers"  class="btn btn-primary " >Yeni Ders Ekle</a>
